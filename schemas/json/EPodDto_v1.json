{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:projekt:order:epod:v1",
  "title": "ePoD DTO",
  "description": "Elektroniczne potwierdzenie dostawy (ePoD).",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "orderId": { "type": "string" },
    "signature": { "type": "string", "description": "Base64 PNG" },
    "photos": {
      "type": "array",
      "items": { "type": "string", "description": "URL lub base64" }
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "userId": { "type": "string" }
  },
  "required": ["id", "orderId", "signature", "timestamp", "userId"],
  "additionalProperties": false
}
