{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:projekt:order:status-history:v1",
  "title": "Order Status History",
  "description": "Pełna historia zmian statusów dla danego zamówienia.",
  "type": "object",
  "properties": {
    "orderId": {
      "type": "string"
    },
    "history": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/StatusChange"
      }
    }
  },
  "required": ["orderId", "history"],
  "definitions": {
    "StatusChange": {
      "type": "object",
      "properties": {
        "status": {
          "type": "string"
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["status", "timestamp"]
    }
  }
}