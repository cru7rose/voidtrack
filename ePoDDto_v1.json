{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "urn:projekt:order:epod:v1",
  "title": "Electronic Proof of Delivery (ePoD)",
  "description": "Elektroniczne potwierdzenie dostawy (ePoD) dla zlecenia transportowego.",
  "type": "object",
  "properties": {
    "epodId": { "type": "string", "format": "uuid" },
    "orderId": { "type": "string", "format": "uuid" },
    "timestamp": { "type": "string", "format": "date-time" },
    "userId": { "type": "string" },
    "signature": { "type": "string", "description": "Podpis w formacie base64/png" },
    "photos": {
      "type": "array",
      "items": { "type": "string", "description": "ZdjÄ™cie w formacie base64/png lub URL" },
      "maxItems": 5
    },
    "location": {
      "type": "object",
      "properties": {
        "lat": { "type": "number" },
        "lng": { "type": "number" }
      },
      "required": ["lat", "lng"]
    },
    "note": { "type": "string" }
  },
  "required": ["epodId", "orderId", "timestamp", "userId", "signature"]
}
